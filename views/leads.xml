<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    <!-- Renderiza el modelo webiste.page como una pagina -->
        <record id="add_leads" model="website.page">
            <field name="name">Conviertete en Socio</field>
            <field name="is_published" eval="True"/>
            <field name="key">website_form.add_leads</field>
            <field name="url">/leads</field>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
                <t t-name="website_form.add_leads">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_empty"/>
                        
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6">

                                    <!-- Formulario obtenido de bootstrap -->
                                    <form action="/add-leads/" method="post" enctype="multipart/form-data" class="needs-validation">
                                        <div class="container d-flex justify-content-center align-items-center">
                                            <h2 class="text-center mb-4 mt-4">Formulario de Contacto</h2>
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label for="nombre" class="form-label">Nombre</label>
                                                        <input type="text" class="form-control" id="nombre" placeholder="Tu nombre" required=""/>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="apellidos" class="form-label">Apellidos</label>
                                                        <input type="text" class="form-control" id="apellidos" placeholder="Tus apellidos" required=""/>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="telefonoPersonal" class="form-label">Teléfono Personal</label>
                                                        <input type="tel" class="form-control" id="telefonoPersonal" placeholder="Tu teléfono" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required=""/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label for="correoElectronico" class="form-label">Correo Electrónico</label>
                                                        <input type="email" class="form-control" id="correoElectronico" aria-describedby="emailHelp" required=""/>
                                                        <div id="emailHelp" class="form-text">Nunca compartiremos tu correo electrónico con nadie más.</div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="diaContacto" class="form-label">Día de Contacto</label>
                                                        <input type="date" class="form-control" id="diaContacto" required=""/>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="viaContacto" class="form-label">Vía de Contacto</label>
                                                        <select class="form-select" id="viaContacto" required="">
                                                            <option selected="selected">Seleccione una opción...</option>
                                                            <option value="email">Email</option>
                                                            <option value="telefono">Teléfono</option>
                                                            <option value="socialMedia">Redes Sociales</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <button type="submit" class="btn btn-primary mb-4">Enviar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<template xml:space="preserve">
    <t t-name="owl.OwlLeadsForm" owl="1">
        <div class="container mt-4">
            <div class="row col-lg-12 col-md-12 d-flex justify-content-center">

                <!-- Aquí es donde agregas la imagen -->
                <div class="imagenForm d-flex justify-content-center">
                    <img src="https://www.shubhbank.com/wp-content/uploads/2017/12/quick-processing-of-leads.png" alt="Descripción de la imagen" />
                </div>
                
                <div class="d-flex" style="display: flex; justify-content: center;">
                    <form name="test_model" action="/contactus-thank-you" method="post" enctype="multipart/form-data">
                        <div class="container">
                            <h2 class="text-center mb-4 mt-4">Formulario de Oportunidades (Leads)</h2>
                            <div class="row mt-5 g-6">
                                <div class="col-md-6">
                                    <div class="mb-5">
                                        <label for="nombre_apellidos" class="form-label">Nombre y Apellidos</label>
                                        <input type="text" class="form-control" name="nombre_apellidos" id="nombre_apellidos" placeholder="Nombre y apellidos" required=""/>
                                    </div>
                                    <div class="mb-5">
                                        <label for="correo_electronico" class="form-label">Correo Electrónico</label>
                                        <input placeholder="Correo electrónico" type="email" name="correo_electronico" class="form-control" id="correo_electronico" aria-describedby="emailHelp" required=""/>                                    
                                    </div>                                    
                                    <div class="mb-5">
                                        <label for="telefono_personal" class="form-label">Teléfono Personal</label>
                                        <input type="tel" class="form-control" name="telefono_personal" id="telefono_personal" placeholder="Número de teléfono" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required=""/>
                                    </div>                                        
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-5">
                                        <label for="experiencia" class="form-label">Años de Experiencia</label>
                                        <input type="number" name="experiencia" class="form-control" id="experiencia" placeholder="Años de Experiencia" required=""/>
                                    </div>
                                    <div class="mb-5">
                                        <label for="fecha_nacimiento" class="form-label">Fecha de Nacimiento</label>
                                        <input type="date" class="form-control" name="fecha_nacimiento" id="fecha_nacimiento" required=""/>
                                    </div>
                                    <div class="mb-5">
                                        <label for="via_contacto" class="form-label">¿Cómo supiste de nosotros?</label>
                                        <select name="via_contacto" class="form-select" id="via_contacto" required="">
                                            <option selected="selected">Seleccione una opción...</option>
                                            <option value="email">Email</option>
                                            <option value="telefono">Teléfono</option>
                                            <option value="socialMedia">Redes Sociales</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row botones">
                                <button type="submit" class="botonesForm btn btn-primary submitButton mt-2" id="sendButton" t-on-submit="handleSubmit">Enviar</button>                                
                                <button type="button" class="botonesForm btn btn-primary mt-2" id="listarLeads" t-on-click="visualizarData">Visualizar</button> 
                            </div>
                        </div>                        
                    </form>                                       
                </div>
            </div>
        </div> 
    </t>
</template> 